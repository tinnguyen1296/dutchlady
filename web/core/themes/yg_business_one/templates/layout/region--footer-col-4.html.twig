{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
    set classes = [
    'region',
    'region-' ~ region|clean_class,
]
%}
{% if footer_region_4 %}

    <div class="row external-2">
        <div class="col-md-6 col-sm-12">
            {% if footer_region_4.0 %}
                {{ footer_region_4.0 }}
            {% endif %}
        </div>
        <div class="col-md-6 col-sm-12">
            <h3 class="title-block">TÌM CHÚNG TÔI</h3>
            <div class="social">
                <a href="{{youtube}}" class="youtube"><i class="fa fa-youtube"></i></a>
                <a href="{{facebook}}" class="facebook"><i class="fa fa-facebook"></i></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            {% if footer_region_4.1 %}
                {{ footer_region_4.1 }}
            {% endif %}
        </div>
    </div>
{% endif %}
